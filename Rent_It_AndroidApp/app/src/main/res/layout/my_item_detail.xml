<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Title-->
        <TextView
            android:id="@+id/label1"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/title"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


        <!--Description-->
        <TextView
            android:id="@+id/label2"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/description"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!--Condition-->
        <TextView
            android:id="@+id/label3"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_condition"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/condition"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!--Location-->
        <TextView
            android:id="@+id/label4"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_location"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/location"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!--Category-->
        <TextView
            android:id="@+id/label5"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_category"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/category"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!--Tags-->
        <TextView
            android:id="@+id/label6"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_tags"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tags"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!--Value-->
        <TextView
            android:id="@+id/label7"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_value"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/value"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!--Daily Rate-->
        <TextView
            android:id="@+id/label8"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_rate"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/rate"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!--Image-->
        <TextView
            android:id="@+id/label9"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>


    </LinearLayout>
</ScrollView>
    </LinearLayout>